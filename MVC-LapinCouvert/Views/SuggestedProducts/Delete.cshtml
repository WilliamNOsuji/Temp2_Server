@model LapinCouvert.Models.SuggestedProduct

@{
    ViewData["Title"] = "Suppression";
}

<h1>Suppression</h1>

<h3>Êtes-vous sûr de vouloir supprimer ceci ?</h3>
<div>
    <h4>Produits suggérés</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
	        @Html.DisplayNameFor(model => model.FinishDate)
        </dt>
        <dd class = "col-sm-10">
	        @Html.DisplayFor(model => model.FinishDate)
        </dd>
        <dt class="col-sm-2">
            Votes For
        </dt>
        <dd class="col-sm-10">
            @(Model.Votes?.Count(v => v.IsFor) ?? 0)
        </dd>
        <dt class="col-sm-2">
            Votes Against
        </dt>
        <dd class="col-sm-10">
            @(Model.Votes?.Count(v => !v.IsFor) ?? 0)
        </dd>
        <dt class = "col-sm-2">
	        @Html.DisplayNameFor(model => model.Photo)
        </dt>
        <dd class="col-sm-10">
	        <img style="height:100px; width:auto" src="@Model.Photo" alt="@Model.Name" />
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index">Retour à la liste</a>
    </form>
</div>
